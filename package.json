{
  "name": "test-frontend",
  "version": "1.0.0",
  "description": "E-Commerce application for testing frontend dev",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass assets/scss/main.scss assets/css/style.css -w",
    "compile:sass": "node-sass assets/scss/main.scss assets/css/style.css",
    "prefix:css": "postcss --use autoprefixer -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OxiCuza/test-frontend.git"
  },
  "keywords": [
    "scss",
    "e-commerce",
    "frontend"
  ],
  "author": "OxiCuza",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OxiCuza/test-frontend/issues"
  },
  "homepage": "https://github.com/OxiCuza/test-frontend#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1"
  }
}
